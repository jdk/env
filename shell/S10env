STRIPPED_PATH=$(echo $PATH | sed -e 's;:/usr/local/bin[/]*;;')
export PATH="${HOME}/bin:/usr/local/bin:/opt/local/bin:/opt/local/sbin:${STRIPPED_PATH}"

if [ "$TERM" != "dumb" ]; then
	export PS1="\[\033[00;32m\]\u@\h \[\033[00;36m\]\w\n\$\[\033[00m\] "
else
	export PS1="\w \$ "
fi

#export LSCOLORS="Gxfxcxdxbxegedabagacad"
export CLICOLOR=1

# vim:filetype=sh
