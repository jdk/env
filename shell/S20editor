export EDITOR="vim"
export GEDITOR="mvim"

# Opens multiple files in side-by-side mode
vix () {
    if [ ! "$#" == "0" ]; then
        GVIMCOLS=$(expr $# \* 80 + \( $# - 1 \))
        mvim -O "+set columns=$GVIMCOLS" $*
    fi
}

# Opens multiple files in tabs
vixt () {
    if [ ! "$#" == "0" ]; then
        mvim -p $*
    fi
}

# vim:filetype=sh
