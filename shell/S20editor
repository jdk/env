export EDITOR="vim"
export GEDITOR="mvim"

fopen () {
    find . -type f -name "$1" | xargs -n 1 ${GEDITOR}
}

openall () {
    while [ "$#" -gt "0" ]; do
        ${GEDITOR} "$1"
        shift
    done
}

vix () {
    if [ ! "$#" == "0" ]; then
        GVIMCOLS=$(expr $# \* 80 + \( $# - 1 \))
        mvim -O "+set columns=$GVIMCOLS" $*
    fi
}

vixt () {
    if [ ! "$#" == "0" ]; then
        mvim -p $*
    fi
}

# vim:filetype=sh
